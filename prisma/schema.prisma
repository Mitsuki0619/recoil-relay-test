datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?
  posts    Post[]
}

model Post {
  id       String  @id @default(cuid())
  title    String
  content  String?
  authorId String
  author   User    @relation(fields: [authorId], references: [id])
}
